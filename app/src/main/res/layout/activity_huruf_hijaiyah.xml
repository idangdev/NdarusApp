<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.muqodimah.HurufHijaiyahActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mengenal Huruf-Huruf Hijaiyyah"
                android:textSize="20sp"
                android:textColor="@color/green_500"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/label_huruf_hijaiyah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/huruf_hijaiyah"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/label_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/iv_huruf_hijaiyah"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/huruf_hijaiyah"
                app:layout_constraintTop_toBottomOf="@id/label_huruf_hijaiyah"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/label_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:textSize="20sp"
                android:textColor="@color/green_500"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/iv_huruf_hijaiyah"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/label_catatan_huruf_hijaiyah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/catatan_huruf_hijaiyah"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/label_title2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>