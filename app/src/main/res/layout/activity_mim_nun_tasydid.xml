<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.belajar.tajwid.mimnuntasydid.MimNunTasydidActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_nun_sukun_tanwin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mim dan Nun Tasydid"
                android:textSize="20sp"
                android:textColor="@color/green_500"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tv_nun_sukun_tanwin_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mim_nun_tasydid"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nun_sukun_tanwin_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/iv_nun_sukun_tanwin_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mim_nun_tasydid"
                app:layout_constraintTop_toBottomOf="@id/tv_nun_sukun_tanwin_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>