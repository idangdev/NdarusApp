<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.muqodimah.MuqodimahActivity">

    <ImageView
        android:id="@+id/bg_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_background_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_top" />

    <TextView
        android:id="@+id/label_title_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Muqodimah"
        android:textColor="@color/green_500"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/label_title_app"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pendahuluan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Pendahuluan"
                android:textAllCaps="false"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:textSize="13sp"
                app:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tartil_tajwid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Arti Tartil dan Tajwid"
                android:textAllCaps="false"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:textSize="13sp"
                app:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_pendahuluan" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_kiat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Kiat Sukses"
                android:textAllCaps="false"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:textSize="13sp"
                app:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_tartil_tajwid" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_hijaiyah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Huruf Hijaiyah"
                android:textAllCaps="false"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:textSize="13sp"
                app:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_kiat" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_harokat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Harokat"
                android:textAllCaps="false"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:textSize="13sp"
                app:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_hijaiyah" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Tempat Keluar Huruf"
                android:textAllCaps="false"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:textSize="13sp"
                app:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_harokat" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_hukum_tajwid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Hukum Tajwid"
                android:textAllCaps="false"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:textSize="13sp"
                app:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_tempat" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sifatul_huruf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Sifatul Huruf"
                android:textAllCaps="false"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:textSize="13sp"
                app:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_hukum_tajwid" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pembagian_makhroj_huruf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Pembagian Makhorijul Huruf"
                android:textAllCaps="false"
                android:textColor="@color/green_500"
                android:textStyle="bold"
                android:textSize="13sp"
                app:backgroundTint="@color/gray"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_sifatul_huruf" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>