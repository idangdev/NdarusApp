<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.muqodimah.TempatKeluarHurufActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/label_head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat-Tempat Keluar Huruf Hijaiyah"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/green_500"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bagian di dalam mulut dan tenggorokan"
                android:textSize="16sp"
                android:textColor="@color/green_500"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/label_head_title"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/iv_tenggorokan"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tenggorokan"
                app:layout_constraintTop_toBottomOf="@id/label_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/label_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bagian Lidah"
                android:textSize="16sp"
                android:textColor="@color/green_500"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/iv_tenggorokan"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/iv_lidah"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/lidah"
                app:layout_constraintTop_toBottomOf="@id/label_title2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/label_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bagian Gigi"
                android:textSize="16sp"
                android:textColor="@color/green_500"
                android:fontFamily="@font/montserrat_bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/iv_lidah"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/iv_gigi"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/gigi"
                app:layout_constraintTop_toBottomOf="@id/label_title3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>